{
    "manifest_version": 3,
    "name": "MindTap",
    "version": "1.2",
    "description": "A gentle nudge to stay focused on distracting sites with a cat-themed UX!",
    "permissions": ["storage", "tabs", "notifications", "activeTab"],
    "host_permissions": [
        "*://www.youtube.com/*",
        "*://m.youtube.com/*",
        "*://www.tiktok.com/*",
        "*://www.instagram.com/*",
        "*://www.snapchat.com/*",
        "*://www.tumblr.com/*",
        "*://www.pinterest.com/*",
        "*://www.discord.com/*",
        "*://discord.com/*",
        "*://web.whatsapp.com/*",
        "*://www.reddit.com/*",
        "*://www.twitch.tv/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "16": "icons/icon16.png"
      }
    },
    "content_scripts": [
      {
        "matches": [
            "*://www.youtube.com/*",
            "*://m.youtube.com/*",
            "*://www.tiktok.com/*",
            "*://www.instagram.com/*",
            "*://www.snapchat.com/*",
            "*://www.tumblr.com/*",
            "*://www.pinterest.com/*",
            "*://www.discord.com/*",
            "*://discord.com/*",
            "*://web.whatsapp.com/*",
            "*://www.reddit.com/*",
            "*://www.twitch.tv/*"
        ],
        "js": ["content.js"],
        "css": ["content.css"]
      }
    ]
}